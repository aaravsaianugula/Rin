<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══════════════════════════════════════════════════════════════════════
         FLUID OVERLAY DESIGN SYSTEM
         Professional, refined aesthetic with subtle depth and motion
         ═══════════════════════════════════════════════════════════════════════ -->
    
    <!-- ─────────────────────────────────────────────────────────────────────── 
         COLOR PALETTE: Muted, Professional Tones
         ─────────────────────────────────────────────────────────────────────── -->
    
    <!-- Base Colors -->
    <Color x:Key="Surface">#1A1A1A</Color>
    <Color x:Key="SurfaceElevated">#242424</Color>
    <Color x:Key="SurfaceOverlay">#2A2A2A</Color>
    
    <!-- Text Hierarchy -->
    <Color x:Key="TextPrimary">#F5F5F5</Color>
    <Color x:Key="TextSecondary">#A0A0A0</Color>
    <Color x:Key="TextMuted">#666666</Color>
    
    <!-- Status Colors (Sophisticated, not neon) -->
    <Color x:Key="StatusIdle">#7A8B99</Color>          <!-- Steel blue-gray -->
    <Color x:Key="StatusActive">#D4A574</Color>        <!-- Warm amber -->
    <Color x:Key="StatusExecuting">#8B7BA5</Color>     <!-- Muted lavender -->
    <Color x:Key="StatusSuccess">#7BA58B</Color>       <!-- Sage green -->
    <Color x:Key="StatusError">#B57A7A</Color>         <!-- Dusty rose -->
    <Color x:Key="StatusStandby">#8A8A8A</Color>       <!-- Neutral gray -->
    
    <!-- Soft State Colors (Professional, Airy) -->
    <Color x:Key="StateWakeWord">#F8F8FF</Color>       <!-- Ghost white - subtle luminosity -->
    <Color x:Key="StateListening">#A8C5D9</Color>      <!-- Soft blue - calm, professional -->
    <Color x:Key="StateWorking">#E8DCC8</Color>        <!-- Warm ivory - gentle activity -->
    <Color x:Key="StateComplete">#9BB5A0</Color>       <!-- Sage green - success -->
    <Color x:Key="StateError">#C9A8A8</Color>          <!-- Muted rose - soft error -->
    
    <!-- Glass Effect Colors -->
    <Color x:Key="GlassBorder">#33FFFFFF</Color>
    <Color x:Key="GlassBorderBottom">#15FFFFFF</Color>
    <Color x:Key="GlassHighlight">#08FFFFFF</Color>
    
    <!-- ─────────────────────────────────────────────────────────────────────── 
         BRUSHES
         ─────────────────────────────────────────────────────────────────────── -->
    
    <!-- Glass Background -->
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="#F0181818"/>
    
    <!-- Glass Border Gradient (top-lit) -->
    <LinearGradientBrush x:Key="GlassBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource GlassBorder}" Offset="0"/>
        <GradientStop Color="{StaticResource GlassBorderBottom}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Subtle inner highlight for depth -->
    <LinearGradientBrush x:Key="GlassInnerHighlightBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0AFFFFFF" Offset="0"/>
        <GradientStop Color="#00FFFFFF" Offset="0"/>
    </LinearGradientBrush>
    
    <!-- State Brushes (Soft, Professional) -->
    <SolidColorBrush x:Key="StateWakeWordBrush" Color="{StaticResource StateWakeWord}"/>
    <SolidColorBrush x:Key="StateListeningBrush" Color="{StaticResource StateListening}"/>
    <SolidColorBrush x:Key="StateWorkingBrush" Color="{StaticResource StateWorking}"/>
    <SolidColorBrush x:Key="StateCompleteBrush" Color="{StaticResource StateComplete}"/>
    <SolidColorBrush x:Key="StateErrorBrush" Color="{StaticResource StateError}"/>
    
    <!-- Status Brushes -->
    <SolidColorBrush x:Key="StatusIdleBrush" Color="{StaticResource StatusIdle}"/>
    <SolidColorBrush x:Key="StatusActiveBrush" Color="{StaticResource StatusActive}"/>
    <SolidColorBrush x:Key="StatusExecutingBrush" Color="{StaticResource StatusExecuting}"/>
    <SolidColorBrush x:Key="StatusSuccessBrush" Color="{StaticResource StatusSuccess}"/>
    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusError}"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    
    <!-- ─────────────────────────────────────────────────────────────────────── 
         ANIMATION DURATIONS (Gentle, Fluid)
         ─────────────────────────────────────────────────────────────────────── -->
    
    <Duration x:Key="DurationFast">0:0:0.2</Duration>
    <Duration x:Key="DurationNormal">0:0:0.4</Duration>
    <Duration x:Key="DurationSlow">0:0:0.6</Duration>
    <Duration x:Key="DurationEntrance">0:0:0.7</Duration>
    <Duration x:Key="DurationBreathing">0:0:2.5</Duration>
    
    <!-- ─────────────────────────────────────────────────────────────────────── 
         EASING FUNCTIONS
         ─────────────────────────────────────────────────────────────────────── -->
    
    <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>
    <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>
    <QuadraticEase x:Key="EaseOutQuad" EasingMode="EaseOut"/>
    <BackEase x:Key="EaseOutBack" EasingMode="EaseOut" Amplitude="0.3"/>
    <ElasticEase x:Key="EaseOutElastic" EasingMode="EaseOut" Oscillations="1" Springiness="4"/>
    
    <!-- ─────────────────────────────────────────────────────────────────────── 
         CORE STYLES
         ─────────────────────────────────────────────────────────────────────── -->
    
    <!-- Glass Panel Style -->
    <Style x:Key="GlassPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="32" ShadowDepth="6" Opacity="0.4" Color="#000000"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Status Indicator Style -->
    <Style x:Key="StatusDotStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="6"/>
        <Setter Property="Height" Value="6"/>
    </Style>
    
    <!-- Subtle Button Style -->
    <Style x:Key="SubtleButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="6" 
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#20FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Input TextBox Style -->
    <Style x:Key="GlassInputStyle" TargetType="TextBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="CaretBrush" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable Display, Segoe UI, sans-serif"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
</ResourceDictionary>
